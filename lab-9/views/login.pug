html
    head
        meta(charset='utf-8')
        title Pug Login page
        link#bootstrap-css(href='//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css', rel='stylesheet')
        script(src='//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js')
        script(src='//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js')
        link(rel="stylesheet" href="/style.css")
        // ---- Include the above in your HEAD tag --------
    body
        #login
            h3.text-center.text-white.pt-5 Login form
            .container
                #login-row.row.justify-content-center.align-items-center
                    #login-column.col-md-6
                        #login-box.col-md-12
                            form#login-form.form(action='/login', method='post')
                                h3.text-center.text-info Login
                                .form-group
                                    label  Email:
                                    br
                                    input#Email.form-control(type='Email', name='Email',placeholder='Email')
                                .form-group
                                    label Password:
                                    br
                                    input#Password.form-control(type='password', name='Password',placeholder='Password')
                                    br
                                    span
                                    span
                                input.btn.btn-info.btn-md(type='submit', value='submit')

